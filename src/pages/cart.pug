extends index.pug 
block pages 
    li: a(href="index.html") Home
    li: a(href="shop.html") Shop
    li: a(href="blog.html") Blog
    li: a(href="about.html") About
    li: a(href="contact.html") Contact
block cart 
    li.current: a(href="cart.html"): i.icon-shopping-cart
block content
    .highlighted.about #[.heading #[h2 #cart] #[p Add your coupon code & Save up to 70% off!]]
    .cart: table
                thead
                    th REMOVE
                    th IMAGE
                    th PRODUCT
                    th PRICE
                    th QUANTITY
                    th SUBTOTAL
                tbody
    .sale: .container #[.coupon #[h3 Apply Coupon] #[form #[input(type="text" placeholder="Enter your coupon" required)] #[input(type="submit" value="Apply")]]] #[.receipt #[h3 Cart Totals] #[table #[tr #[td Cart Subtotal] #[td $0]] #[tr #[td Shipping] #[td Free]] #[tr #[td Total] #[td $0]]] #[button Proceed to checkout]]